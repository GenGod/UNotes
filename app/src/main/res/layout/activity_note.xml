<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".NoteActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical">
        <EditText
                android:id="@+id/activity_note_title"
                android:inputType="text|textMultiLine|textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_row="0"
                android:layout_column="0"/>

        <EditText
                android:id="@+id/activity_note_description"
                android:inputType="text|textMultiLine|textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="623dp"
                android:gravity="top"
                android:textSize="18dp"/>
    </LinearLayout>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/activity_note_save_button"
                android:text="@string/save_button_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="bottom"/>
        <Button
                android:id="@+id/activity_note_cancel_button"
                android:text="@string/cancel_button_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="bottom"/>
        <Button
                android:id="@+id/activity_note_remove_button"
                android:text="@string/remove_button_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="bottom"/>

    </GridLayout>

</LinearLayout>